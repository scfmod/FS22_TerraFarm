<?xml version="1.0" encoding="utf-8" standalone="no"?>
<GUI name="machineSettingsCalibration">
    <GuiElement type="empty" profile="tfMachineDialog_uiInGameMenuFrame">
        <!-- Static page header -->
        <GuiElement type="empty" profile="ingameMenuFrameHeaderPanel">
            <GuiElement type="bitmap" profile="ingameMenuGeneralSettingsHeaderIcon" />
            <GuiElement type="text" profile="tfMachineDialog_ingameMenuFrameHeaderText" text="$l10n_ui_calibration" />
        </GuiElement>

        <!-- Layout content box -->
        <GuiElement type="bitmap" profile="tfMachineDialog_ingameMenuSettingsBox" id="settingsContainer">
            <GuiElement type="scrollingLayout" profile="tfMachineDialog_ingameMenuSettingsLayout" id="boxLayout">

                <GuiElement type="text" profile="tfMachineDialog_descriptionText" text="$l10n_ui_calibrationDescription" />
                <GuiElement type="bitmap" profile="tfMachineDialog_statusWrapper">
                    <GuiElement type="boxLayout" profile="tfMachineDialog_statusLayout" id="statusLayout">
                        <GuiElement type="text" profile="tfMachineDialog_statusTitle" id="surveyorName" />
                        <GuiElement type="text" profile="tfMachineDialog_statusText" id="statusText" />
                    </GuiElement>

                    <GuiElement type="bitmap" profile="tfMachineDialog_statusImage" id="surveyorImage" />

                    <GuiElement type="bitmap" profile="tfMachineDialog_statusTopShadow" />
                    <GuiElement type="bitmap" profile="tfMachineDialog_statusBottomShadow" />
                </GuiElement>

                <GuiElement type="empty" profile="tfMachineDialog_inputWrapper">
                    <GuiElement type="button" profile="tfMachineDialog_button" text="$l10n_ui_calibrate" id="selectSurveyorButton" onClick="onClickSelectSurveyor" />
                    <GuiElement type="text" profile="tfMachineDialog_multiTextOptionTitle" text="$l10n_ui_selectSurveyor" />
                </GuiElement>

                <GuiElement type="empty" profile="tfMachineDialog_inputWrapper">
                    <GuiElement type="button" profile="tfMachineDialog_button" text="$l10n_ui_machines" id="selectMachineButton" onClick="onClickSelectMachine" />
                    <GuiElement type="text" profile="tfMachineDialog_multiTextOptionTitle" text="$l10n_ui_calibrateCopy" />
                </GuiElement>

                <GuiElement type="empty" profile="tfMachineDialog_inputWrapper">
                    <GuiElement type="button" profile="tfMachineDialog_button" text="$l10n_button_reset" id="resetButton" onClick="onClickReset" />
                    <GuiElement type="text" profile="tfMachineDialog_multiTextOptionTitle" text="" />
                </GuiElement>
            </GuiElement>
        </GuiElement>
    </GuiElement>
</GUI>